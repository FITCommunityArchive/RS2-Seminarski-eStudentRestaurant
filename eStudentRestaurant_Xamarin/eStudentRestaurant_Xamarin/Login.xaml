<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eStudentRestaurant_Xamarin.Login"
             BackgroundColor="#081b33"
             >
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" Padding="30">
            <Label Text="eStudent Restaurant"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" FontSize="Large" TextColor="White" Margin="20"/>
            

            <Entry x:Name="usernameInput" Placeholder="Username"></Entry>
            <Entry x:Name="passwordInput" Placeholder="Password" IsPassword="True"></Entry>

            <StackLayout Orientation="Horizontal" HorizontalOptions="End">
                <Button x:Name="StudentRegistrationButton" Text="Student registration" Clicked="StudentRegistrationButton_Clicked" BackgroundColor="#081b33" TextColor="White" ></Button>
                <Button x:Name="ClientRegistrationButton" Text="Client registration" Clicked="ClientRegistrationButton_Clicked" BackgroundColor="#081b33" TextColor="White"></Button>

                <Button x:Name="SignInButton" Text="Sign in" BackgroundColor="#4682b4" TextColor="White" Clicked="SignInButton_Clicked"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>